<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td>
    <%= form_for(line_item, method: :patch) do |f| %>
      <%= f.select :quantity,
          options_for_select(1..50, line_item.quantity) %>
      <%= f.submit "Update" %>
    <% end %>
  </td>
  <td><%= line_item.product.title %></td>
  <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
  <td><%= button_to 'Remove item', line_item_path(line_item), method: :delete %></td>
</tr>

